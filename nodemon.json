{
  "ignore": [
    ".git",
    "node_modules/**",
    "src/tests/**"
  ],
  "verbose": true,
  "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
  "watch": [
    "tsc && tscpaths -p tsconfig.json --src src"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,json,yml,yaml"
}